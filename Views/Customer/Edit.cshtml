@model Customer

<div class="container" style="width:50%;">
    <form method="post" asp-action="Edit"> 
        <input type="hidden" name="cusid" value="@Model.CusId" />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>
                    Edit Customer Details
                </h2>
                <hr />
            </div>
            <div asp-validation-summary="All" style="list-style:None;" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CusName"></label>
                <input asp-for="CusName" class="form-control"/>
                <span asp-validation-for="CusName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ShippingAddress"></label>
                <input asp-for="ShippingAddress" class="form-control"/>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}