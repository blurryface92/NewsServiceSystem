@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customer";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customers</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr class="table-dark">
            <th>CustomerId</th>
            <th>Customer Name</th>
            <th>Shipping Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.CusId</td>
                <td>@obj.CusName</td>
                <td>@obj.ShippingAddress</td>
                    <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.CusId">Edit</a> &nbsp;|&nbsp; <form asp-controller="Customer" asp-action="DeletePost" asp-route-id="@obj.CusId" method="post"><a onclick="this.parentElement.submit()" class="text-danger" style="text-decoration:underline;" id="customDeletebtn">Delete</a></form>
                </div>
                    </td>
            </tr>
        }
    </tbody>
</table>